@model IEnumerable<ShoppingCart.Application.ViewModels.OrderDetailsViewModel>
@{
    TempData["Title"] = "OrderDetails";
}

<h1 style="text-align: center">Shopping Cart</h1>

<div>
    <hr />

    @if (User.Identity.IsAuthenticated)
    {
        @if (Model.Count() != 0)
        {
            <div class="container">

                <br />
                <table class="table">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <partial name="OrderDetailsPartial" ,Model />
                    </tbody>
                </table>
                <div style="text-align: right">
                    <h4>
                        Subtotal: €@ViewBag.total
                    </h4>
                    <a href="/Orders/Checkout?orderId=@ViewBag.Id&productId=@ViewBag.prodId" class="btn btn-outline-dark ">Checkout</a>

                </div>
            </div>
        }
        else
        {
            <p style="text-align:center; font-size: 150%;"><b><i>There are no items in the shopping cart! </i></b> &#128577; </p>
        }
    }
    else
    {
        <br />
        <hr />
        <p style="text-align:center; font-size: 150%;"><b><i>Your shopping cart is empty</i> &#128577; <br /> <i>Please Register or Login with our website in order to Shop. Thankyou & Enjoy!</i></b> </p>
    }
</div>
