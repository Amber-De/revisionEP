@model IEnumerable<ShoppingCart.Application.ViewModels.ProductViewModel>
@{
    TempData["Title"] = "Index";
}

<h1 style="text-align:center;">Products Catalogue</h1>
<hr />
<br />

<!--Using this format for every product-->

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        { /*
            <div class="col-md-5">
                <div class="card" style="width: 18rem;">
                    <img src="@product.ImageUrl" class="card-img-top card-image" alt="@product.Name">
                    <div class="card-body">
