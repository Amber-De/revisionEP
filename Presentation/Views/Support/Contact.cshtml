
@{
    ViewData["Title"] = "Contact";
}

<!--After we put the html code to be seen on the page and the user hits submit..we have to connect it to the controller.

    We use post in method because it hides the data in the request body. For any form we built we use POST.-->

<h1>Contact</h1>


<form method="post" asp-action="Contact" asp-controller="Support">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Example textarea</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="query"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>





